<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_detail_navigation"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.movieapplication.presentation.ui.MovieFragment"
        android:label="fragment_media"
        tools:layout="@layout/fragment_movie" >

        <action
            android:id="@+id/action_movieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.movieapplication.presentation.ui.MovieDetailFragment"
        android:label="fragment_media_detail"
        tools:layout="@layout/fragment_movie_detail" />

</navigation>